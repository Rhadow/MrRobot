{
  "name": "mr-robot",
  "version": "0.0.1",
  "description": "A facebook messenger bot",
  "main": "index.js",
  "scripts": {
    "dev": "better-npm-run dev",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./index.js -s",
    "build": "npm run clean && npm run build-server",
    "test": "ava"
  },
  "betterScripts": {
    "dev": {
      "command": "babel-node index.js",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rhadow/MrRobot.git"
  },
  "author": "Rhadow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rhadow/MrRobot/issues"
  },
  "homepage": "https://github.com/Rhadow/MrRobot#readme",
  "dependencies": {
    "babel-cli": "^6.11.4",
    "body-parser": "^1.15.2",
    "es6-promise": "^3.2.1",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "redis": "^2.6.2"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.10"
  },
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "verbose": true
  }
}
